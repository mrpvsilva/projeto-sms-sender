<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="siga" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

		<class>Dominio.Usuario</class>
		<class>Dominio.Perfil</class>
		<class>Dominio.Permissao</class>
		<class>Dominio.Modulo</class>

		<class>Dominio.Endereco</class>


		<class>Dominio.Fornecedor</class>
		<class>Dominio.TelefoneFornecedor</class>
		<class>Dominio.EnderecoFornecedor</class>

		<class>Dominio.Lembrete</class>
		<class>Dominio.Telefone</class>

		<class>Dominio.TipoItem</class>
		<class>Dominio.Servico</class>
		<class>Dominio.TiposEvento</class>

		<class>Dominio.Evento</class>
		<class>Dominio.EventoItem</class>
		<class>Dominio.Item</class>



		<class>Dominio.Cliente</class>
		<class>Dominio.TelefoneCliente</class>
		<class>Dominio.EnderecoCliente</class>

		<properties>

			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/siga" />
			<property name="javax.persistence.jdbc.password" value="user123456" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="user" />
			<property name="javax.persistence.schema-generation.database.action"
				value="create" />
			<property name="eclipselink.logging.level.sql" value="FINE" />
			<property name="eclipselink.logging.parameters" value="true" />

		</properties>
	</persistence-unit>
</persistence> 